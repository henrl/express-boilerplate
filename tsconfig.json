{
    "compilerOptions": {
        "target": "ES2020",
        "module": "commonjs",
        "lib": ["ES2021", "dom"],
        "rootDir": ".",
        "outDir": "./dist",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "typeRoots": ["types/", "node_modules/@types"],
    },
    "include": ["./src/*.ts", "./src/**/*.ts"],
    "exclude": [
        "node_modules",
        "./test/**/*.test.ts",
    ],
}
